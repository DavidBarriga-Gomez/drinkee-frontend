

<div class="album py-5 bg-light">
  <div class="container">
    <h1>Drink Recipes</h1><br>
    <% @results.each_slice(3).to_a.each do |three_results| %>
    <div class="row">
      <% three_results.each do |result| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm" id= <%= result.name.gsub(' ', '-') %>>
          <div class="image-container">
            <img class="card-image" width="100%" height="auto" src="<%= result.image %>"/><title><%= result.name %></title><rect width="100%" height="100%" fill="<%= result.image %>"></rect>
            <div class="centered"><h4><%= result.name %></h4></div>
          </div>
          <div class="card-body">
            <p class="card-text"><%= result.instructions %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to "View", "/drinks?name=#{result.name}", :class => "btn btn-sm btn-outline-secondary" %>
                <%= link_to "Email Recipe", "/notifications/#{result.name}/new", :class => "btn btn-sm btn-outline-secondary" %>
              </div>
              <small class="text-muted">9 mins</small>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
